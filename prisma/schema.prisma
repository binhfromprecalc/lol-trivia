generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lobby {
  id      String  @id @default(uuid())
  code    String  @unique
  started Boolean @default(false)

  hostId String? @unique
  host   Player? @relation("LobbyHost", fields: [hostId], references: [id])

  // One-to-many: A lobby can have many players
  players Player[] @relation("LobbyPlayers")
}

model Player {
  id            String  @id @default(uuid())
  gameName      String
  tagLine       String
  riotId        String  @unique
  puuid         String?
  region        String?
  rank          String?
  winrate       Float?
  mostKills     Int?
  mostDeaths    Int?
  profileIconId Int?
  summonerLevel Int?

  lobbyId     String?
  lobby       Lobby?  @relation("LobbyPlayers", fields: [lobbyId], references: [id])
  hostedLobby Lobby?  @relation("LobbyHost")

  championMasteries ChampionMastery[]

  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @updatedAt
}

model ChampionMastery {
  id             String @id @default(uuid())
  championId     Int
  championPoints Int

  playerId String
  player   Player @relation(fields: [playerId], references: [id])

  @@unique([playerId, championId])
}
